{
  "manifest_version": 3,
  "name": "Assistant",
  "version": "1.0",

  "description": "Find information faster using an AI augmented chatbot search assistant.",

  "icons": {
    "48": "icons/border-48.png"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["chat-interface/section.html.js", "chat-interface/script.js"],
      "css": ["chat-interface/style.css"]
    }
  ],
  
  "host_permissions": [ "*://*.ngrok-free.app/*" ]
}
